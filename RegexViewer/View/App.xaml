                            TargetName="OuterBorder"
                            Value="#50FFFFFF" />
                    <Setter Property="Stroke"
                            TargetName="InnerBorder"
                            Value="#50FFFFFF" />
                </Trigger>
                <Trigger Property="IsKeyboardFocused"
                         Value="true">
                    <Setter Property="Stroke"
                            TargetName="Bg"
                            Value="#E0717070" />
                    <Setter Property="Fill"
                            TargetName="Bg"
                            Value="{StaticResource MenuItemPressedFill}" />
                    <Setter Property="Stroke"
                            TargetName="InnerBorder"
                            Value="#50747272" />
                </Trigger>
                <Trigger Property="IsSubmenuOpen"
                         Value="true">
                    <Setter Property="Stroke"
                            TargetName="Bg"
                            Value="#E0717070" />
                    <Setter Property="Fill"
